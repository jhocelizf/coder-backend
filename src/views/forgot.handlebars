<div class="login-container">
    <form id="login-form" class="login-form">
        <h2>Iniciar sesión</h2>
        <div class="form-group">
            <label class="label-login" for="username">Usuario:</label>
            <input type="text" id="username" name="username" required />
        </div>
        <div class="form-group">
            <label class="label-login" for="newPassword">Nueva Contraseña:</label>
            <input  class="input-login" type="password" id="newPassword" name="newPassword" required />

            <label class="label-login" for="newTwoPassword">Valide su Contraseña:</label>
            <input  class="input-login" type="password" id="newTwoPassword" name="newTwoPassword" required />
        </div>
        <button id="forgot" type="submit">Cambiar contrasena</button>
    </form>
</div>
<script src="js/forgot.js"></script>