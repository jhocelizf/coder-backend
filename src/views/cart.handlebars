<h1 id="{{purchaser}}" class="{{idC}}">Carrito</h1>

<table style="width: 100%;">
    <thead>
        <tr>
            <th>#</th>
            <th>Titulo</th>
            <th>Code</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each result.products}}
        <tr>
            <td><img src="{{product.thumbnail}}" alt="{{product.title}}"  class="product-image"></td>
            <td>{{product.title}}</td>
            <td>{{product.code}}</td>
            <td>{{product.category}}</td>
            <td>${{product.price}}</td>

            <td><button class="products" id="{{product._id}}">Eliminar</button></td>

        </tr>
        {{/each}}
    </tbody>
</table> 
<br>
<form id="comprar">
<button class="btn btn-success" type="submit">Comprar</button>
</form>
<button class="btn btn-warning" id="vaciar">Vaciar Carrito</button>