<div>
    <h1>Carrito</h1>

    <form>
        <button type="button" onclick="emptyCart('/api/carts/{{cid}}')">Vaciar carrito</button>
    </form>

    {{#each cart}}

    <p><b>Title:</b> {{this.name}}</p>
    <p><b>Description:</b> {{this.description}}</p>
    <p><b>Price:</b> {{this.price}}</p>
    <p><b>Quantity:</b> {{this.quantity}}</p>
    <form>
        <label for="quantity">New Quantity:</label>
        <input type="number" id="quantity-{{product._id}}" name="quantity" value="{{quantity}}">
        <button type="button" onclick="updateQuantity('/api/carts/{{../cid}}/products/{{product._id}}')">Actualizar carrito</button>
        <button type="button" onclick="removeProductFromCart('/api/carts/{{../cid}}/products/{{product._id}}')">Eliminar</button>
    </form>
    {{#if thumbnail.length}}
    <p><b>Thumbnail:</b> {{thumbnail}}</p>
    {{/if}}
    <hr>
    </hr>
    {{/each}}


</div>