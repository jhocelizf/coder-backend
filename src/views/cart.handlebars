<div>
  <h1>Carrito</h1>

  {{#each cart}}

  <p><b>Title:</b> {{this.item.title}}</p>
  <p><b>Description:</b> {{this.item.description}}</p>
  <p><b>Price:</b> {{this.item.price}}</p>
  <p><b>Quantity:</b> {{this.quantity}}</p>
  <form>
    <td>
      <button class="decrement" data-id="{{ this._id }}">-</button>
      {{ this.quantity }}
      <button class="increment" data-id="{{ this._id }}">+</button>
    </td>
    <td>
      <button class="remove" data-id="{{ this._id }}">Eliminar</button>
    </td>

  </form>
  {{#if thumbnail.length}}
  <p><b>Thumbnail:</b> {{thumbnail}}</p>
  {{/if}}
  <hr>
  </hr>
    {{#unless this.products.length}}
              <p class="mt-3">Este carrito está vacío</p>
            {{/unless}}
  {{/each}}


</div>